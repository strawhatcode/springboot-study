<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!--
          -id: 上下文id
          -targetRuntime:
            -MyBatis3Simple：不生成xxxBySample
          -defaultModelType：指定生成对象的样式
            -flat:所有内容，包含（blob、主键） 全部放到一个对象中
    -->
    <context id="mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat" >

        <!--去除注释-->
        <commentGenerator>
            <!--去除时间注释-->
            <property name="suppressDate" value="true"></property>
            <!--去除全部注释-->
            <property name="suppressAllComments" value="true"></property>
        </commentGenerator>

        <!--连接数据库-->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/test01?characterEncoding=utf8&amp;serviceTimezone=utc"
                        userId="root"
                        password="123456"/>

        <!--生成javabean-->
        <javaModelGenerator targetPackage="com.example.m_generation.Bean" targetProject="src/main/java">
            <!--删除头尾空格 与String.trim()一样-->
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!--生成mapper文件（.xml）-->
        <sqlMapGenerator targetPackage="mybatis.mapper" targetProject="src/main/resources">
        </sqlMapGenerator>

        <!--生成DAO映射文件（mapper接口）   type：XMLMAPPER,生成的mapper接口完全依赖XML-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.example.m_generation.mapper" targetProject="src/main/java">
        </javaClientGenerator>

        <!--tableName：数据库的表名  domainObjectName：javabean的类名 -->
        <table tableName="User" domainObjectName="User" >
            <generatedKey column="id" sqlStatement="Mysql" identity="true"></generatedKey>
        </table>
    </context>

</generatorConfiguration>
